{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "globals.ts",
        "linter.ts",
        "main/atom/atomUtils.ts",
        "main/atom/autoCompleteProvider.ts",
        "worker/messages.ts",
        "worker/parent.ts"
    ]
}
